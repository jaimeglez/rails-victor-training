%h1 Listing user
= link_to 'New user', new_user_path
%table
  %thead
    %tr
      %th User name
      %th Email
      %th{:colspan => "4"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= link_to 'Show', user_path(user)
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Create article', new_user_article_path(user)
        %td= link_to 'Show articles',user_articles_path(user)
