%h2.text-center Editing article
=render partial: 'shared/errors', locals: {model_obj: @article}
= bootstrap_form_for :article, url: user_article_path(@user, @article), method: :patch do |f|
    = f.text_field :title
    = f.text_area :text
    = f.submit "Save article", class: "btn btn-success"
%br
%a.btn.btn-primary{:href => "#{user_articles_path(@user)}"}
    %i.fa.fa-backward.fa-lg= ' Back'
