%h1 Listing articles By #{@user[:username]}
%br
%a.btn.btn-success{:href => "#{new_admin_user_article_path(@user)}"}
  %i.fa.fa-plus.fa-lg= ' New Article'
%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Text
      %th{:colspan => "2"}
  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.text
        %td
          %a.btn.btn-info{:href => "#{admin_user_article_path(@user, article)}"}
            %i.fa.fa-eye= ' Show'
        %td
          %a.btn.btn-warning{:href => "#{edit_admin_user_article_path(@user, article)}"}
            %i.fa.fa-pencil-square-o= ' Edit'
        %td
          = link_to 'Destroy Article', admin_user_article_path(@user, article),
               method: :delete,
               data: { confirm: 'Are you sure delete this article?' },
               class: "btn btn-danger"
= paginate @articles, theme:'twitter-bootstrap-3'
%br
%a.btn.btn-primary{:href => "#{admin_users_path}"}
  %i.fa.fa-backward.fa-lg= ' Back'